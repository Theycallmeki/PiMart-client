{
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://thesis-flask.onrender.com/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Permissions-Policy",
          "value": "camera=(self), microphone=(self)"
        }
      ]
    }
  ]
}
